<% include partials/header %> 

<div class="ui main text container">
    <div class="ui huge header">Blog App</div>
        <div class="ui top attached segment">
            <div class="ui divided items">
                <% findBlog.forEach(function(findblog){ %>
                <div class="item">
                    <div class="image">
                         <img src="<%= findblog.image %>" >
                    </div>
                    <div class="content">
                          <a class="header" href="/blogs/<%= findblog._id %>"><%= findblog.title %></a>
                    <div class="meta">
                        <span><%= findblog.created.toDateString() %></span>
                    </div>
                    <div class="description">
                        <%- findblog.body.substring(0,100) %>...
                    </div>
                    <div class="extra">
                        <a class="ui floated basic violet button" href="/blogs/<%= findblog._id %>">
                            Read More<i class="right chevron icon"></i>
                            </a>
                    </div>
                   </div>
                 </div>
            <% }); %>
        </div>
    </div>
</div>



<% include partials/footer %> 
